<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>


<VBox fx:id="mainScreen" style="-fx-background-color: #191C2F;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ChatJavaFX_2.Controller">
   <children>
      <AnchorPane fx:id="registration" prefHeight="500.0" prefWidth="370.0" style="-fx-background-color: #191C2F;">
         <children>
            <Label fx:id="chatLabel1" layoutX="120.0" prefHeight="67.0" prefWidth="131.0" text="#chatFX">
               <font>
                  <Font name="Comic Sans MS Bold" size="30.0" />
               </font>
               <textFill>
                  <LinearGradient endX="1.0" endY="1.0">
                     <stops>
                        <Stop color="#fd5200" />
                        <Stop color="#ffbc9f" offset="1.0" />
                     </stops>
                  </LinearGradient>
               </textFill>
            </Label>
            <Button fx:id="enterButton" layoutX="145.0" layoutY="327.0" mnemonicParsing="false" onAction="#toAuth" prefHeight="30.0" prefWidth="80.0" style="-fx-background-color: #FD5200; -fx-background-radius: 5;" text="Enter" textFill="WHITE">
               <font>
                  <Font name="Futura Medium" size="14.0" />
               </font>
            </Button>
            <TextField fx:id="login" layoutX="31.0" layoutY="200.0" prefHeight="30.0" prefWidth="308.0" promptText="Login" style="-fx-background-radius: 5;">
               <font>
                  <Font name="Futura Medium" size="13.0" />
               </font>
            </TextField>
            <PasswordField fx:id="password" layoutX="31.0" layoutY="258.0" prefHeight="30.0" prefWidth="308.0" promptText="Password" style="-fx-background-radius: 5;">
               <font>
                  <Font name="Futura Medium" size="13.0" />
               </font>
            </PasswordField>
         </children>
      </AnchorPane>
      <AnchorPane fx:id="chat" prefHeight="500.0" prefWidth="370.0" style="-fx-background-color: #191C2F;">
         <children>
              <Label fx:id="chatLabel" layoutX="138.0" layoutY="14.0" text="#chatFX">
                  <font>
                      <Font name="Comic Sans MS Bold" size="22.0" />
                  </font>
                  <textFill>
                      <LinearGradient endX="1.0" endY="1.0">
                          <stops>
                              <Stop color="#fd5200" />
                              <Stop color="#ffbc9f" offset="1.0" />
                          </stops>
                      </LinearGradient>
                  </textFill>
              </Label>
              <TextField fx:id="messageField" layoutX="23.0" layoutY="447.0" onKeyPressed="#sendMessage" prefHeight="30.0" prefWidth="233.0" promptText="Message" style="-fx-background-radius: 5;">
                  <font>
                      <Font name="Futura Medium" size="13.0" />
                  </font>
              </TextField>
              <TextArea fx:id="textArea" layoutX="23.0" layoutY="51.0" prefHeight="373.0" prefWidth="324.0">
                  <font>
                      <Font name="Comic Sans MS Bold" size="13.0" />
                  </font>
              </TextArea>
              <Button fx:id="sendButton" layoutX="267.0" layoutY="447.0" mnemonicParsing="false" onAction="#sendMessage" prefHeight="30.0" prefWidth="80.0" style="-fx-background-color: #FD5200; -fx-background-radius: 5;" text="Send" textFill="WHITE">
                  <font>
                      <Font name="Futura Medium" size="14.0" />
                  </font>
              </Button>
         </children>
      </AnchorPane>
   </children>
</VBox>
